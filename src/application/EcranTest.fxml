<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="418.0" prefWidth="535.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.EcranTestController">
   <center>
      <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView fx:id="firstFrame" fitHeight="184.0" fitWidth="246.0" pickOnBounds="true" preserveRatio="true" />
            <ImageView fx:id="originalFrame" fitHeight="230.0" fitWidth="237.0" pickOnBounds="true" preserveRatio="true" />
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <ImageView fx:id="maskImage" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
                  <ImageView fx:id="morphImage" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
               </children>
            </VBox>
         </children>
      </HBox>
   </center>
   <right>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Reglages : ">
               <padding>
                  <Insets bottom="15.0" top="10.0" />
               </padding>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </Label>
            <Label text="Hue Start">
               <padding>
                  <Insets top="10.0" />
               </padding></Label>
            <Slider fx:id="hueStart" blockIncrement="1" max="180" min="0" onValueChange="#sliderChange" value="0">
               <padding>
                  <Insets bottom="10.0" />
               </padding></Slider>
			<Label text="Hue Stop" />
			<Slider fx:id="hueStop" blockIncrement="1" max="180" min="0" onValueChange="#sliderChange" value="50">
               <padding>
                  <Insets bottom="10.0" />
               </padding></Slider>
			<Label text="Saturation Start" />
			<Slider fx:id="saturationStart" blockIncrement="1" max="255" min="0" onValueChange="#sliderChange" value="60">
               <padding>
                  <Insets bottom="10.0" />
               </padding></Slider>
			<Label text="Saturation Stop" />
			<Slider fx:id="saturationStop" blockIncrement="1" max="255" min="0" onValueChange="#sliderChange" value="200">
               <padding>
                  <Insets bottom="10.0" />
               </padding></Slider>
			<Label text="Value Start" />
			<Slider fx:id="valueStart" blockIncrement="1" max="255" min="0" onValueChange="#sliderChange" value="50">
               <padding>
                  <Insets bottom="10.0" />
               </padding></Slider>
			<Label text="Value Stop" />
			<Slider fx:id="valueStop" blockIncrement="1" max="255" min="0" onValueChange="#sliderChange" value="255">
               <padding>
                  <Insets bottom="10.0" />
               </padding></Slider>
            <Label text="Mode" />
            <ComboBox fx:id="choiceMode" prefWidth="150.0" />
         </children>
      </VBox>
   </right>
   <bottom>
      <VBox alignment="CENTER" prefHeight="117.0" prefWidth="676.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="testButton" alignment="center" onAction="#buttonStartTest" prefHeight="27.0" prefWidth="80.0" text="Start test">
               <padding>
                  <Insets bottom="5.0" top="5.0" />
               </padding>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Button>
			<Label fx:id="hsvCurrentValues" text="Result">
               <padding>
                  <Insets bottom="5.0" top="5.0" />
               </padding></Label>
            <Label fx:id="nbOeufsDetecte" text="Nb oeufs détecté : X">
               <padding>
                  <Insets bottom="5.0" top="5.0" />
               </padding>
            </Label>
         </children>
      </VBox>
   </bottom>
</BorderPane>
